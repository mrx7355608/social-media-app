{
  "compilerOptions": {
    "types": ["node", "jest"],
    "module": "commonjs",
    "baseUrl": "./src",
    "paths": {
      "@/core/*": ["core/*"],
      "@/adapters/*": ["adapters/*"],
      "@/frameworks/*": ["frameworks/*"],
      "@/data/*": ["data/*"]
    },
    "outDir": "build",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true
  }
}
