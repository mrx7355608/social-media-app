{
    "compilerOptions": {
        "target": "ES5",
        "types": ["node", "jest"],
        "module": "commonjs",
        "baseUrl": "./",
        "paths": {
            "@/core/*": ["src/core/*"],
            "@/adapters/*": ["src/adapters/*"],
            "@/frameworks/*": ["src/frameworks/*"],
            "@/utils/*": ["src/utils/*"],
            "@/services/*": ["src/services/*"],
            "@/data/*": ["src/data/*"],
            "@/mocks/*": ["tests/mocks/*"]
        },
        "outDir": "build",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true
    }
}
